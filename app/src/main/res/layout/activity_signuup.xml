<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#53FF5B"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signuup">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="-201dp"
            tools:layout_editor_absoluteY="-132dp">

            <ImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:layout_marginTop="-0dp"
                android:src="@drawable/dara1" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:src="@drawable/label_bg_white_stroke_white"
                android:text="WELCOME TO DARA FARMERS"
                />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:src="@drawable/label_bg_white_stroke_white"
                android:text="Login to your Account"
                />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/label_bg_white_stroke_white"
                android:src="@drawable/label_bg_white_stroke_white"
                android:hint="Email"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/label_bg_white_stroke_white"
                android:src="@drawable/label_bg_white_stroke_white"
                android:hint="Password"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:inputType="textPassword"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/label_bg_white_stroke_white"
                android:src="@drawable/label_bg_white_stroke_white"
                android:hint="Confirm Password"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:inputType="textPassword"
                />
            <Button
                android:id="@+id/btn_signup"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="90dp"
                android:layout_marginEnd="90dp"
                android:layout_marginTop="20dp"
                android:hint="Sign up"
                android:textSize="20sp"
                android:textColorHint="@color/white"
                android:textStyle="bold"
                android:background="@drawable/btn_blue"
                />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:src="@drawable/label_bg_white_stroke_white"
                android:text="-Or Login with-"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:paddingVertical="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/label_bg_white_stroke_white"
                    android:src="@drawable/google"
                    />

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:paddingVertical="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/label_bg_white_stroke_white"
                    android:src="@drawable/communication"
                    />
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:paddingVertical="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/label_bg_white_stroke_white"
                    android:src="@drawable/social"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"
                    android:text="Donâ€™t have an account ? Sign Up"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    />


            </LinearLayout>






        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
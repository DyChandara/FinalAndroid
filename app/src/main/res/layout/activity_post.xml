        android:layout_width="390dp"
        android:layout_height="40dp"
        android:src="@drawable/lb_black"
        android:layout_below="@id/label3"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:id="@+id/label4"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="តម្លៃ"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:ems="16"
        android:inputType="text"
        android:layout_alignTop="@id/label4"
        android:layout_alignStart="@id/label4"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="-10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/tlabel4"
        />
    <!--label5-->
    <ImageView
        android:layout_width="390dp"
        android:layout_height="40dp"
        android:src="@drawable/lb_black"
        android:layout_below="@id/label4"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/label5"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="ការពិពណ៍នា"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:ems="16"
        android:inputType="text"
        android:layout_alignTop="@id/label5"
        android:layout_alignStart="@id/label5"
        android:layout_marginTop="-10dp"
        android:layout_marginStart="10dp"
        />
<!--    label6-->
    <ImageView
        android:layout_width="390dp"
        android:layout_height="40dp"
        android:src="@drawable/lb_black"
        android:layout_below="@id/label5"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:id="@+id/label6"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="ទីតាំង"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:ems="16"
        android:inputType="text"
        android:layout_alignTop="@id/label6"
        android:layout_alignStart="@id/label6"
        android:layout_marginTop="-7dp"
        android:layout_marginStart="10dp"
        />
<!--    label7-->
    <ImageView
        android:layout_width="390dp"
        android:layout_height="40dp"
        android:src="@drawable/lb_black"
        android:layout_below="@id/label6"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:id="@+id/label7"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="ការដឹកជញ្ជូន"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:ems="16"
        android:inputType="text"
        android:layout_alignTop="@id/label7"
        android:layout_alignStart="@id/label7"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="-10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/tlabel5"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="បញ្ជូលព័ត៍មានទំនាក់ទំនង"

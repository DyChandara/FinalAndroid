<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Post">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#00FF0A"
            android:id="@+id/topbg"
            />


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/arrow"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:id="@+id/back"
            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ប្រកាសថ្មី"
        android:layout_toEndOf="@id/back"
        android:layout_marginStart="10dp"
        android:layout_marginTop="9dp"
        android:id="@+id/title1"
        android:textSize="27sp"
        android:textColor="#000000"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="រូបថត"
        android:layout_below="@id/topbg"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:textSize="25sp"
        android:textColor="#000000"
        android:id="@+id/title2"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="0/8"
        android:textSize="20sp"

        android:textColor="#000000"
        android:layout_alignTop="@id/title2"
        android:layout_alignEnd="@id/label1"
        />


    <ImageView
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:src="@drawable/lb_black"
        android:layout_below="@id/title2"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:background="#D3D3D3"
        android:id="@+id/label1"
        />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/blackcamera"
        android:layout_below="@id/label1"
        android:layout_marginStart="120dp"
        android:layout_marginTop="10dp"
        android:layout_alignTop="@id/label1"
        android:id="@+id/camera"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/camera"
        android:layout_toEndOf="@+id/camera"
        android:textSize="25sp"
        android:text="បញ្ចូលរូបចត"
        android:layout_marginStart="10dp"
        android:id="@+id/tcamera"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ព័ត័មានលម្អិត"
        android:layout_below="@id/label1"
        android:layout_marginStart="15dp"
        android:layout_marginTop="2dp"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:id="@+id/title3"
        />

    <ImageView
        android:layout_width="390dp"
        android:layout_height="40dp"
        android:src="@drawable/lb_black"
        android:layout_below="@id/title3"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:id="@+id/label2"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="ប្រភេទ,អាហារ"
        android:textSize="20sp"
        android:ems="16"
        android:inputType="text"
        android:textColor="@color/black"
        android:layout_alignTop="@id/label2"
        android:layout_alignStart="@id/label2"
        android:layout_marginTop="-10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/tlabel2"
        />

<!--    label3-->
    <ImageView
        android:layout_width="390dp"
        android:layout_height="40dp"
        android:src="@drawable/lb_black"
        android:layout_below="@id/label2"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:id="@+id/label3"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="ចំណងជើង"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:ems="16"
        android:inputType="text"
        android:layout_alignTop="@id/label3"
        android:layout_alignStart="@id/label3"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="-10dp"
        android:layout_marginStart="10dp"
        />
<!--    label4-->

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Notification">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-201dp"
        tools:layout_editor_absoluteY="-50dp">

        <ImageView
            android:id="@+id/topbg"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#00FF0A" />

        <ImageView

            android:id="@+id/imgbell"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/bell" />

        <ImageView

            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="-40dp"
            android:layout_toStartOf="@id/imgbell"
            android:src="@drawable/arrow" />


        <TextView
            android:id="@+id/txtnotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/btnmenu"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/imgbell"
            android:text="ដំណឹង"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topbg"
            android:layout_marginStart="10dp"
            android:layout_marginTop="-40dp"
            android:text="ទាំងអស់"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />



        <ImageView
            android:id="@+id/btnmenu"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignEnd="@id/topbg"
            android:layout_marginStart="-55dp"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:src="@drawable/menu"

            />



        <TextView
            android:id="@+id/txtN1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DyChandara "
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_below="@id/topbg"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
             />
        <TextView
            android:id="@+id/txtN2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="បានលក់ទុរេន"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_below="@id/topbg"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/txtN1"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/dots"
            android:layout_alignTop="@id/txtN1"
            android:layout_alignEnd="@id/btnmenu"
            />



        <!--list1-->
        <ImageButton

            android:id="@+id/list1"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@id/topbg"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/list_white_bg"
            tools:ignore="SpeakableTextPresentCheck" />



        <!--menudown-->
        <ImageView
            android:id="@+id/menu"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="669dp"
            android:layout_marginBottom="-40dp"
            android:background="@drawable/menu_bg" />

        <ImageView
            android:id="@+id/home"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignTop="@id/menu"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/home1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/home"
            android:layout_alignStart="@id/home"
            android:layout_marginStart="-12dp"
            android:text="ទំព័រដើម"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/notification"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignTop="@id/menu"
            android:layout_marginStart="110dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/bell" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/home"
            android:layout_alignStart="@id/notification"
            android:layout_marginStart="-7dp"
            android:text="ដំណឹង"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/message"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignTop="@id/menu"
            android:layout_marginStart="280dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/chat" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/home"
            android:layout_alignStart="@id/message"
            android:layout_marginStart="-6dp"
            android:text="ជជែក"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/profile"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignTop="@id/menu"
            android:layout_marginStart="340dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/account" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/home"
            android:layout_alignStart="@id/profile"
            android:layout_marginStart="-6dp"
            android:text="គណនី"
            android:textColor="@color/black"
            android:textSize="15sp" />


        <!--    downbg-->
        <ImageView
            android:id="@+id/cambg"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignTop="@id/menu"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-45dp"
            android:background="@drawable/green_round_bg" />

        <ImageView
            android:id="@+id/cambg2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignTop="@id/menu"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-40dp"
            android:background="@drawable/blue_round_bg"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="33dp"
            android:src="@drawable/camera" />

        <TextView
            android:id="@+id/camtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cambg2"
            android:layout_alignStart="@+id/cambg2"
            android:layout_alignTop="@+id/cambg2"
            android:layout_marginStart="27dp"
            android:layout_marginTop="50dp"
            android:text="លក់"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
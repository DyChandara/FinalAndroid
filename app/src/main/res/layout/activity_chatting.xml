<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chatting">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
     />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbartop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#53FF5B"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >


        <ImageView
            android:id="@+id/btnback"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/arrow"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/seller"
            android:layout_marginStart="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dara Chan"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="2dp"
            android:src="@drawable/call"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="130dp"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/dots"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_alignTop="@+id/pro1"
            android:layout_alignStart="@+id/pro1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:src="@drawable/duren1"
            android:layout_gravity="center"
            android:id="@+id/img1"
            />

        <ImageButton
            android:layout_alignStart="@+id/toolbardown"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="625dp"
            android:background="@drawable/list_white_bg"
            android:paddingBottom="30dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/pro1"
            />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/img1"
            android:layout_alignTop="@id/img1"
            android:text="ផ្លែទុរេន"
            android:textSize="10sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginStart="60dp"
            android:textColor="@color/black"
            android:id="@+id/name1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7$/kg"
            android:textSize="7sp"
            android:textStyle="bold"
            android:textColor="#FF0000"
            android:layout_below="@id/name1"
            android:layout_marginStart="60dp"
            android:layout_marginTop="15dp"
            />
        <ImageView
            android:id="@+id/imgclose"
            android:src="@drawable/close"
            android:layout_alignTop="@id/img1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignEnd="@id/toolbardown"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            />
        <ImageButton
            android:layout_width="5dp"
            android:layout_height="40dp"
            android:layout_marginTop="625dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/list_white_bg"
            android:paddingBottom="30dp"
            android:layout_toStartOf="@id/imgclose"
            android:id="@+id/pro2"
            />
        <ImageView
            android:id="@+id/imgsent"
            android:src="@drawable/send"
            android:layout_alignTop="@id/img1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignEnd="@id/pro2"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            />















        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbardown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#53FF5B"
            android:layout_marginTop="675dp"/>

        <ImageView
            android:id="@+id/imgplus"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/plus"
            android:layout_marginTop="14dp"
            android:layout_marginStart="20dp"
            android:layout_alignTop="@id/toolbardown"
            />
        <ImageView
            android:id="@+id/imglocation"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/placeholder"
            android:layout_marginTop="14dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/imgplus"
            android:layout_alignTop="@id/toolbardown"
            />
        <ImageView
            android:id="@+id/Image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/image"
            android:layout_marginTop="14dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/imglocation"
            android:layout_alignTop="@id/toolbardown"
            />
        <EditText
            android:id="@+id/txtmessage"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:hint="Type your message"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#FF0000"
            android:layout_below="@id/name1"
            android:layout_alignTop="@id/toolbardown"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/Image"
            android:background="#C6C6C6"
            android:paddingStart="20dp"
            />
        <ImageView
            android:id="@+id/micro"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/microphone"
            android:layout_marginTop="14dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/txtmessage"
            android:layout_alignTop="@id/toolbardown"
            />





    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>